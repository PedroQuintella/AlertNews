<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/view_noticia">

    <TextView
        android:id="@+id/text_view_titulo_noticia"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:text="Saúde e bem-estar são fatores fundamentais para a qualidade de vida de um indivíduo. Para ter saúde, é necessário estar bem física, mental e socialmente."
        android:textSize="18dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_view_resumo_noticia"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:text="A newslatter que traz os melhores conteúdos do Estadão sobre vida saudável, inscreva-se para receber por e-mail." />

    <TextView
        android:id="@+id/text_view_autor_noticia"
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:text="Priscila Mengue"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/text_view_data_noticia"
            android:layout_width="170dp"
            android:layout_height="match_parent"
            android:text="20 de Setembro de 2022" />

        <TextView
            android:id="@+id/text_view_hora_noticia"
            android:layout_width="168dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="15:31"/>
    </LinearLayout>

    <TextView
        android:id="@+id/text_view_tempo_leitura"
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:text="1 min de leitura"/>

    <TextView
        android:id="@+id/text_view_texto_noticia"
        android:layout_width="match_parent"
        android:layout_height="527dp"
        android:text="Segundo a Organização Mundial de Saúde (OMS), saúde pode ser definida como “um estado de completo bem-estar físico, mental e social, e não apenas a ausência de doença ou enfermidades”. Sendo assim, não basta apenas estar sem nenhuma doença, é necessário estar bem consigo mesmo e com o corpo, sem sentir dores ou até mesmo tristeza." />
</LinearLayout>